# Example Variable Values for Sandbox Testing
# Feature: BCM-based Kubernetes Deployment via Kubespray
#
# IMPORTANT: Copy this file to sandbox.auto.tfvars and update with actual values
# The actual sandbox.auto.tfvars file is excluded from git via .gitignore

# =============================================================================
# BCM Provider Configuration
# =============================================================================

bcm_endpoint            = "https://bcm.example.com"  # BCM API endpoint
bcm_insecure_skip_verify = true                       # Skip TLS verification for self-signed certs
# bcm_username and bcm_password should be set in HCP Terraform workspace variables (sensitive)

# =============================================================================
# BCM Node Selection
# =============================================================================

control_plane_nodes = ["dgx-mgmt1"]                           # BCM hostnames for control plane
worker_nodes        = ["dgx01", "dgx02", "dgx03", "dgx04"]    # BCM hostnames for GPU workers
# etcd_nodes        = []                                      # Defaults to control_plane_nodes

environment = "dev"  # Environment: dev, staging, or prod

# =============================================================================
# Node User Configuration
# =============================================================================

node_username       = "ansible"                    # Username for service account on nodes
node_user_full_name = "Ansible Service Account"   # Full name for the account
# node_password should be set in HCP Terraform workspace variables (sensitive)
# node_user_ssh_public_keys = []                  # Additional SSH public keys (optional)

# =============================================================================
# Kubernetes Configuration
# =============================================================================

cluster_name       = "bcm-k8s-sandbox"
kubernetes_version = "v1.31.9"
cni_plugin         = "calico"

# =============================================================================
# SSH Configuration
# =============================================================================

ssh_user = "ansible"  # Should match node_username for BCM-provisioned user

# SSH keys are auto-generated by Terraform (tls_private_key resource)
# You can optionally provide your own:
# ssh_private_key      = <sensitive - set in HCP Terraform workspace>
# ssh_private_key_path = "~/.ssh/id_rsa"

# =============================================================================
# Kubespray Configuration
# =============================================================================

kubespray_playbook_path = "./kubespray/cluster.yml"
kubespray_version       = "v2.27.1"
