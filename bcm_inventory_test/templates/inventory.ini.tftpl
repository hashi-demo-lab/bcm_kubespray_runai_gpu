# Ansible Inventory - Generated by Terraform from BCM
# Target nodes: ${join(", ", keys(nodes))}

[all:vars]
ansible_user=${ansible_user}
ansible_ssh_private_key_file=${ansible_ssh_private_key_file}
ansible_become=true
ansible_become_method=sudo

[compute_nodes]
%{ for hostname, node in nodes ~}
${hostname} ansible_host=${node_ips[hostname]} ip=${node_ips[hostname]} bcm_uuid=${node.uuid}
%{ endfor ~}
